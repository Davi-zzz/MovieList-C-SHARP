<div class="container d-flex justify-content-center align-items-center" style="height: 70vh;">
    <div class="card w-50 d-flex justify-content-center align-items-center">
    <h2>@ViewBag.message</h2>
        <h2 class="text-center my-5">Registro</h2>
        <form method="post" action="@Url.Action("SignUp", "Users")">
           
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" name="name" placeholder="Digite seu nome">
                   @Html.ValidationMessage("name")
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Digite seu email">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" class="form-control" name="password" placeholder="Digite sua senha">
                @Html.ValidationMessage("password")
            </div>
            <div class="form-group">
                <label for="data_nascimento">Data de nascimento</label>
                <input type="date" class="form-control" name="birthday" id="birthday" placeholder="Digite sua data de nascimento">
                @Html.ValidationMessage("birthday")
            </div>
            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-block" style="margin: 10px 0px 10px 0px">Registrar</button>
            </div>
            <div class="form-group d-flex justify-content-center">
                @Html.ActionLink("Já tem uma conta? Faça login.", "Login", "Users", new { area = "" }, new { @style = "margin: 0px 0px 10px 0px" })
            </div>
        </form>
    </div>
</div>
